class _JarColors {
  static const _colorMap = {
    'NEC': Color(0xFF4A5EE5),
    'FFA': Color(0xFF5BE9B9),
    'LTSS': Color(0xFFFB6F92),
    'EDU': Color(0xFFFFCE67),
    'PLAY': Color(0xFF8758FF),
    'GIVE': Color(0xFF34C759),
  };

  static Color colorForJar(String jarId) {
    return _colorMap[jarId.toUpperCase()] ?? Colors.blueGrey;
  }
}

